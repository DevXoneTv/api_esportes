<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_20sdp"
    android:gravity="center"
    style="@style/TransparentDialog"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_170sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="4dp"
        android:layout_margin="@dimen/_5sdp"
        android:clipToPadding="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/myImage"
            android:background="@drawable/bg_esportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />
     <View
         android:background="#E5000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"


       >

        <ImageView
            android:scaleType="fitXY"
            android:background="@drawable/logo"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/jogador" />



        <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_gravity="center"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:text="Sua Api Expirou"
                   android:textColor="#FFFFFF"
                   android:textSize="@dimen/_9sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:text="Para continuar utilizando nossa api, por favor entre em contato com o suporte para renovar seu acesso."
                   android:textColor="#DBDBDB"
                   android:textSize="@dimen/_6sdp"
                   android:layout_width="@dimen/_140sdp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:textStyle="bold"
                   android:text="Entre em contato com seu revendedor.. "
                   android:textColor="#E4E4E4"
                   android:textSize="@dimen/_7sdp"
                   android:layout_width="@dimen/_130sdp"
                   android:layout_height="wrap_content"/>




           </LinearLayout>



       </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_gravity="center"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/buttonSair"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@drawable/sport_selector"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Sair"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp" />
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>


        <TextView
            android:id="@+id/errocode"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Erro code:"
            android:maxLines="1"
            android:textColor="#F44336"
            android:textSize="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>






</RelativeLayout>