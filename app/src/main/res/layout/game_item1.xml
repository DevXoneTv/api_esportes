<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/focos"
	android:orientation="horizontal"
	android:focusable="true"
	android:gravity="center"
	android:layout_centerInParent="true"
	android:layout_width="match_parent"
	android:layout_gravity="top"
	android:layout_marginTop="@dimen/_5sdp"
	android:layout_height="wrap_content">

	<LinearLayout
		android:padding="@dimen/_4sdp"
		android:background="@drawable/sport_selector"
		android:gravity="center"
		android:layout_gravity="center"
		android:layout_height="@dimen/_50sdp"
		android:layout_width="match_parent">

		<LinearLayout
			android:background="#32000000"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<RelativeLayout
				android:background="#775A4FED"
				android:gravity="center"
				android:layout_width="@dimen/_50sdp"
				android:layout_height="match_parent">

				<LinearLayout
					android:layout_centerInParent="true"
					android:orientation="vertical"
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/sport_type"
					android:layout_width="@dimen/_25sdp"
					android:layout_height="@dimen/_25sdp"
					android:src="@mipmap/ic_launcher" />

					<TextView
						android:text="Brasileirao Betano"
						android:layout_marginTop="@dimen/_1sdp"
						android:textSize="@dimen/_5sdp"
						android:textColor="#ffffffff"
						android:gravity="center"
						android:id="@+id/camp"
						android:layout_width="@dimen/_46sdp"
						android:layout_height="fill_parent" />
				</LinearLayout>
			</RelativeLayout>
			<LinearLayout

				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="@dimen/_8sdp">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="0.0dip"
					android:layout_weight="2.0">
					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="0.0dip"
						android:gravity="end"
						android:layout_height="fill_parent"
						android:layout_weight="1.0">
						<TextView
							android:text="Cruzeiro"
							android:textSize="@dimen/_8sdp"
							android:textColor="#ffffffff"
							android:gravity="center"
							android:id="@+id/tv_name1"
							android:layout_width="@dimen/_86sdp"
							android:layout_height="fill_parent" />
						<ImageView
							android:layout_gravity="center"
							android:src="@drawable/ic_launcher_background"
							android:id="@+id/iv_iconA"
							android:layout_width="@dimen/_16sdp"
							android:layout_height="@dimen/_16sdp"
							android:layout_marginLeft="@dimen/_8sdp" />

					</LinearLayout>

					<TextView
						android:textSize="@dimen/_8sdp"
						android:textColor="#FFFFFF"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginEnd="@dimen/_10sdp"
						android:text="18:00H"
						android:gravity="center"
						android:layout_gravity="center"
						android:id="@+id/tv_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />

					<LinearLayout
						android:layout_width="0.0dip"
						android:layout_height="fill_parent"
						android:layout_weight="1.0"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/iv_iconB"
							android:layout_width="@dimen/_15sdp"
							android:layout_height="@dimen/_15sdp"
							android:layout_gravity="center"

							android:src="@drawable/ic_launcher_background" />

						<TextView
							android:text="Atletico"
							android:id="@+id/tv_name2"
							android:layout_width="@dimen/_86sdp"
							android:layout_height="fill_parent"
							android:layout_marginLeft="@dimen/_4sdp"
							android:gravity="center"
							android:textColor="#ffffffff"
							android:textSize="@dimen/_8sdp" />

						<LinearLayout
							android:orientation="vertical"
							android:gravity="center_vertical"
							android:layout_width="match_parent"
							android:layout_height="fill_parent">
							<LinearLayout
								android:orientation="horizontal"
								android:id="@+id/linear_channelicon"
								android:layout_width="wrap_content"
								android:layout_height="@dimen/_17sdp" />

						</LinearLayout>
					</LinearLayout>
					</LinearLayout>

			</LinearLayout>
		</LinearLayout>


	</LinearLayout>


</LinearLayout>